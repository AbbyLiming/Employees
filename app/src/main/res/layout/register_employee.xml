<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="500dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:id="@id/send_address"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手机号码:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_tel"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line" />
        <!-- 无圆角-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_name"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="密码:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/register_employee_pass1"
                android:gravity="center"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <!-- 分割线 -->
        <View style="@style/bg_line" />
        <!-- 无圆角-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确认密码:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="textPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_pass2"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="类型:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_job"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="描述:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_jobText"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="状态:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_status"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="站点:"
                android:gravity="center"
                android:textColor="@color/gray"
                />
            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/register_employee_outletsId"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <View style="@style/bg_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:paddingTop="20sp"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/register_employee_regist"
            android:background="@color/button_light"
            android:textColor="@color/white"
            android:text="提交"/>
    </LinearLayout>
</LinearLayout>
